# ============================================================
# BiblioTech Pro - Variables de Entorno para Docker
# ============================================================
# Copia este archivo a .env y personaliza los valores
# ============================================================

# Base de datos Oracle
ORACLE_PASSWORD=Oracle123
DB_USER=biblioteca
DB_PASSWORD=biblioteca123
DB_URL=jdbc:oracle:thin:@localhost:1521/XEPDB1

# API de IA (Gemini)
GEMINI_API_KEY=tu_api_key_aqui

# JWT Secret (genera uno seguro para producción)
JWT_SECRET=tu_secret_jwt_muy_seguro_de_al_menos_32_caracteres

# Telegram Bot (obtén el token de @BotFather en Telegram)
# 1. Abre Telegram y busca @BotFather
# 2. Envía /newbot y sigue las instrucciones
# 3. Copia el token que te proporciona
TELEGRAM_BOT_TOKEN=

# Intervalo de recomendaciones automáticas (en horas)
RECOMMENDATION_INTERVAL=1

# Chat ID para notificaciones admin (envía /id al bot para obtenerlo)
TELEGRAM_ADMIN_CHAT_ID=

# n8n Webhook URL (se configura automáticamente en Docker)
N8N_WEBHOOK_URL=http://n8n:5678/webhook/
